<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.getresultfromactivity.SecondActivity"
    android:background="@drawable/newfacegame"
    >

    <TextView android:text="Question" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:textStyle="bold"
        android:layout_marginTop="57dp"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#8a5218" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTimer"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="21dp"
        android:textSize="21.5dp"
        android:textColor="#00066e"
        android:textStyle="bold"
        android:layout_alignParentRight="false"
        android:text="60" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/time"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pgTimer"
        android:indeterminate="false"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/time"
        android:layout_toEndOf="@+id/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:id="@+id/score"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:textSize="20dp"

        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum_score"
        android:layout_gravity="right"
        android:layout_marginRight="44dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:textColor="#00066e"
        android:textSize="21.5dp"
        android:textStyle="bold"
        android:text="0" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="#a3682a"
            android:layout_marginTop="125dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:textSize="35dp"
            android:background="#fffded" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp">

            <Button
                android:text="1"
                android:id="@+id/button1"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonfff"
                android:layout_marginRight="10dp"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button2"

                android:text="2"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonfff"
                android:textSize="30dp" />

            <Button

                android:text="3"
                android:id="@+id/button3"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonfff"
                android:layout_marginLeft="10dp"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp">

            <Button

                android:text="4"
                android:id="@+id/button4"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonff"
                android:layout_marginRight="10dp"
                android:textSize="30dp" />

            <Button

                android:text="5"
                android:id="@+id/button5"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonff"
                android:textSize="30dp" />

            <Button

                android:text="6"
                android:id="@+id/button6"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonff"
                android:layout_marginLeft="10dp"
                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp">

            <Button


                android:text="7"
                android:id="@+id/button7"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonf"
                android:layout_marginRight="10dp"
                android:textSize="30dp" />

            <Button

                android:text="8"
                android:id="@+id/button8"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonf"
                android:textSize="30dp" />

            <Button

                android:text="9"
                android:id="@+id/button9"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonf"

                android:layout_marginLeft="10dp"
                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">

            <Button

                android:text="Clear"
                android:id="@+id/buttondelete"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonfff"
                android:layout_marginRight="10dp"
                android:textSize="25dp" />

            <Button

                android:text="0"
                android:id="@+id/button0"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonf"
                android:textSize="30dp" />

            <Button

                android:text="Enter"
                android:id="@+id/buttonenter"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:textColor="#ff643617"
                android:background="@drawable/bottonfff"

                android:layout_marginLeft="10dp"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
